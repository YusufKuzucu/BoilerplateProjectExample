@section scripts {

    <script>
        $(document).ready(function () {
            $("#ContactForm").validate({
                rules: {
                    name: {
                        required: true,
                        minlength: 2
                    },
                    surname: {
                        required: true,
                        minlength: 2
                    },
                    email: {
                        required: true,
                        email: true
                    },
                    subject: {
                        required: true,
                        minlength: 2
                    },
                    message: {
                        required: true,
                        minlength: 2,
                        maxlength: 250
                    }
                },
                messages: {
                    name: {
                        required: 'Lütfen adınızı giriniz',
                        minlength: 'Adınız en az 2 karakter olmalı'
                    },
                    surname: {
                        required: 'Lütfen soyadınızı giriniz',
                        minlength: 'Soyadınız en az 2 karakter olmalı'
                    },
                    email: 'Lütfen eposta adresinizi giriniz',
                    subject: 'Lütfen iletişime geçmek istediğiniz konuyu giriniz',
                    message: {
                        required: 'Lütfen mesajınızı giriniz',
                        minlength: 'Mesajınız en az 2 karakter olmalı',
                        maxlength: 'Mesajınız en fazla 250 karakter olmalı'
                    }
                },
                submitHandler: function (form) {
                    $.ajax({
                        type: "POST",
                        url: "/Default/AddContact",
                        data: $(form).serialize(), 
                        success: function (response) {
                            console.log(response)
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: 'Mesajınız Alındı',
                                text: 'İletişim mesajınız alınmıştır, en kısa sürede iletişime geçilecektir.',
                                showConfirmButton: false,
                                timer: 6500
                            }).then(()=>{
                                window.location.href = "/Default/Contact"
                            });
                            
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    });
                }
            });
        });
    </script>

}



